{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@utils/*": ["./utils/*"]
        },
        "allowImportingTsExtensions": true
    },
    "include": ["packages", "utils"]
}
