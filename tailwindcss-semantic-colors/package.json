{
  "name": "@ilijazm/tailwindcss-semantic-colors",
  "version": "0.1.1",
  "description": "TailwindCSS Semantic Colors is a plugin for Tailwind CSS v4 that abstracts colors into semantic colors, allowing you to reference colors by their intended meaning (such as `primary`, `success`, or `warning`) instead of specific color values.",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint": "eslint",
    "test": "jest",
    "build": "node --experimental-transform-types build.ts",
    "dev": "npm run build -- --watch"
  },
  "main": "dist/index.js",
  "type": "module",
  "files": [
    "dist/",
    "docs/",
    "README.md"
  ],
  "keywords": [
    "tailwind",
    "tailwindcss",
    "plugin",
    "css",
    "utilities",
    "components",
    "colors"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "author": "Ilijaz Mehmedovic",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+git@github.com:IlijazM/tailwindcss-semantic-utilities.git",
    "directory": "tailwindcss-semantic-colors"
  },
  "dependencies": {
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.13",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "esbuild": "^0.25.6",
    "eslint": "^9.31.0",
    "jest": "^30.0.4",
    "ts-jest": "^29.4.0",
    "typescript-eslint": "^8.36.0"
  }
}